<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_3sdp"
    app:cardCornerRadius="5dp"
    app:cardElevation="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/_5sdp">

        <ImageView
            android:id="@+id/img_item_grid"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_160sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/avata_user" />

        <TextView
            android:id="@+id/tv_name_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_item_grid"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="5dp"
            android:maxLines="1"
            android:text="Tên"
            android:textSize="13dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_address_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name_grid"
            android:layout_marginStart="@dimen/_2sdp"
            android:layout_marginBottom="5dp"
            android:drawablePadding="@dimen/_10sdp"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="Địa chỉ"
            android:textSize="@dimen/_10sdp"
            app:drawableStartCompat="@drawable/ic_pin" />

        <TextView
            android:id="@+id/tv_date_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_address_grid"
            android:drawablePadding="@dimen/_10sdp"
            android:maxLines="1"
            android:text="Ngày"
            android:textSize="@dimen/_10sdp"
            app:drawableStartCompat="@drawable/ic_clock" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>