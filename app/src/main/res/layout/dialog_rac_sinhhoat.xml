<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_30sdp"
    android:layout_marginEnd="@dimen/_30sdp"
    android:paddingHorizontal="@dimen/_15sdp"
    android:paddingBottom="@dimen/_35sdp"
    android:background="@drawable/custom_layout_support">

    <com.example.mykotlinapp.common.BaseImageView
        android:id="@+id/iv_close"
        android:layout_width="@dimen/_23sdp"
        android:layout_height="@dimen/_23sdp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:padding="@dimen/_5sdp"
        app:srcCompat="@drawable/ic_close" />

    <com.example.mykotlinapp.common.BaseTextView
        android:id="@+id/tv_thanks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:text="RÁC THẢI SINH HOẠT"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/_16sdp" />

    <View
        android:id="@+id/view_dialog"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@+id/tv_thanks"
        android:background="#16777777" />

    <com.example.mykotlinapp.common.BaseTextView
        android:id="@+id/tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_dialog"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_15sdp"
        android:text="@string/rac1"
        android:textColor="@color/black"
        android:textSize="@dimen/_16sdp" />


</RelativeLayout>
