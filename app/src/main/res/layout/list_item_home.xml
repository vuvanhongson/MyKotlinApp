<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_5sdp"
    app:cardCornerRadius="6dp"
    app:cardElevation="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_item_list"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginEnd="10dp"
            android:padding="@dimen/_5sdp"
            android:scaleType="fitXY"
            android:src="@drawable/avata_user" />

        <TextView
            android:id="@+id/tv_name_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@+id/img_item_list"
            android:text="Tên"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_address_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name_list"
            android:layout_marginStart="@dimen/_2sdp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@+id/img_item_list"
            android:drawablePadding="@dimen/_5sdp"
            android:ellipsize="end"
            android:text="Địa chỉ"
            app:drawableStartCompat="@drawable/ic_pin" />

        <TextView
            android:id="@+id/tv_date_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_address_list"
            android:layout_toEndOf="@+id/img_item_list"
            android:drawablePadding="@dimen/_5sdp"
            android:text="Ngày"
            app:drawableStartCompat="@drawable/ic_clock" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>
